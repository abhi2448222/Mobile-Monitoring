<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#a7d5d7ff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.goyal.group14.MessageAPI"
    tools:showIn="@layout/activity_message_api">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Read Sent Messages"
        android:id="@+id/button17"
        android:onClick="read_sent"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read received messages"
        android:id="@+id/button18"
        android:onClick="read_inbox"
        android:layout_below="@+id/button17"
        android:layout_alignLeft="@+id/button17"
        android:layout_alignStart="@+id/button17"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add content to filter"
        android:id="@+id/button19"
        android:onClick="set_content"
        android:layout_below="@+id/button18"
        android:layout_alignLeft="@+id/button18"
        android:layout_alignStart="@+id/button18"
        android:layout_marginTop="27dp"
        android:layout_alignRight="@+id/button18"
        android:layout_alignEnd="@+id/button18" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add blocking number"
        android:id="@+id/button20"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/button19"
        android:onClick="addBlock"
        android:layout_alignLeft="@+id/button19"
        android:layout_alignStart="@+id/button19"
        android:layout_alignRight="@+id/button19"
        android:layout_alignEnd="@+id/button19" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check msg Duration"
        android:onClick="showDuration"
        android:id="@+id/button23"
        android:layout_below="@+id/button20"
        android:layout_marginTop="26dp"
        android:layout_alignRight="@+id/button20"
        android:layout_alignEnd="@+id/button20"
        android:layout_alignLeft="@+id/button20"
        android:layout_alignStart="@+id/button20" />
</RelativeLayout>
